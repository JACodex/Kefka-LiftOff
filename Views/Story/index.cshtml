@{
}
<p>
    <a asp-controller="Story" asp-action="Add">Add Story</a>
    <a asp-controller="Story" asp-action="Delete">Delete Story</a>
</p>
    <h1>Story Component</h1>
@if(ViewBag.Stories.Count > 0)
{
<table class="table">
    <tr>
        <th>ID</th>
        <th>Story Title</th>
        <th>Description</th>
        <th>Story Text</th>
        <th>Selected</th>
    </tr>
        @foreach(Story story in ViewBag.Stories)
        {
            <tr>
                <td>@story.Id</td>
                <td>@story.Name</td>
                <td>@story.Description</td>
                <td>@story.StoryText</td>
                <td><a asp-controller="Story" asp-action="Edit" asp-route-id="@story.Id" >Edit Story : @story.Id</a></td>
            </tr>
        }
    </table>
}
else
{
    <p>No Stories</p>
}


